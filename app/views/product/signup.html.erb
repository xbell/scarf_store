<h1>Sign Up</h1>

  <div class="container">
    <div class="row centered-form">
      <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default">
        	<div class="panel-heading">
			    	<h3 class="panel-title">Sign Up for Wrap It Up!</h3>
			 		</div>
			 		<div class="panel-body">
			    	<form role="form" action="/signup" method="POST">
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
			    		<div class="form-group">
			    			<input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address" value="<%= @email %>">
			  			</div>

		    			<div class="row">
		    				<div class="col-xs-6 col-sm-6 col-md-6">
		    					<div class="form-group">
		    						<input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
		    					</div>
		    				</div>
		    				<div class="col-xs-6 col-sm-6 col-md-6">
		    					<div class="form-group">
		    						<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
		    					</div>
		    				</div>
		    			</div>

			    		<input type="submit" value="Sign Up!" class="btn btn-info btn-block">

			    	</form>
			    </div>
	    	</div>
    	</div>
    </div>
  </div>
